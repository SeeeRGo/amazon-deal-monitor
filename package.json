{
  "name": "amazon-deal-monitor",
  "version": "1.0.0",
  "description": "Amazon Deal Monitoring System with Discord Integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "demo": "npx tsx src/demo.ts --discord",
    "demo:prod": "npm run build && node dist/demo.js",
    "demo:mock": "npx tsx src/demo-mock.ts",
    "demo:mock:prod": "npm run build && node dist/demo-mock.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "amazon",
    "deals",
    "discord",
    "scraper",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "discord.js": "^14.14.0",
    "axios": "^1.6.0",
    "decimal.js": "^10.4.0",
    "config": "^3.3.0",
    "dotenv": "^16.3.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.3.0",
    "bottleneck": "^2.19.0",
    "node-cron": "^3.0.0",
    "zod": "^3.22.0",
    "js-yaml": "^4.1.0",
    "proxy-chain": "^2.4.0",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
